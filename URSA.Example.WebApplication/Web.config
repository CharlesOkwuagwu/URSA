<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <configSections>
        <section name="romanticWeb" type="RomanticWeb.Configuration.ConfigurationSectionHandler, RomanticWeb" />
        <sectionGroup name="ursa">
            <section name="core" type="URSA.Configuration.UrsaConfigurationSection, URSA.Core" />
            <section name="description" type="URSA.Configuration.DescriptionConfigurationSection, URSA.Http.Description" />
        </sectionGroup>
    </configSections>
    <ursa>
        <core installerAssemblyNameMask="URSA*" serviceProviderType="URSA.ComponentModel.WindsorComponentProvider, URSA.CastleWindsor" converterProviderType="URSA.Web.Converters.DefaultConverterProvider, URSA.Core" />
        <description typeDescriptionBuilderType="URSA.Web.Http.Description.HydraCompliantTypeDescriptionBuilder, URSA.Http.Description" />
    </ursa>
    <romanticWeb>
        <factories>
            <factory name="http" metaGraphUri="meta://ursa/">
                <ontologies>
                    <add prefix="hydra" uri="http://www.w3.org/ns/hydra/core#" />
                    <add prefix="shacl" uri="http://www.w3.org/ns/shacl#" />
                    <add prefix="guid" uri="http://openguid.net/rdf#" />
                    <add prefix="ursa" uri="http://github.io/ursa/vocabulary#" />
                </ontologies>
                <mappingAssemblies>
                    <add assembly="URSA.Http.Description" />
                    <add assembly="URSA.Example.WebApplication" />
                </mappingAssemblies>
            </factory>
        </factories>
    </romanticWeb>
    <system.web>
        <compilation debug="true" targetFramework="4.5" />
        <httpRuntime targetFramework="4.5" />
        <customErrors mode="Off" />
    </system.web>
    <system.webServer>
        <httpErrors errorMode="DetailedLocalOnly" />
        <handlers>
            <remove name="OPTIONSVerbHandler" />
            <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
            <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
        </handlers>
        <rewrite>
            <rules>
                <rule name="XML Documentation" stopProcessing="true">
                    <match url="(.*)\.documentation.xml$" />
                    <action type="Rewrite" url="{R:1}?format=xml" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <dependentAssembly>
                <assemblyIdentity name="Remotion.Linq" publicKeyToken="fee00910d6e5f53b" culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-1.15.15.0" newVersion="1.15.15.0" />
            </dependentAssembly>
            <dependentAssembly>
                <assemblyIdentity name="NLog" publicKeyToken="5120e14c03d0593c" culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-3.2.0.0" newVersion="3.2.0.0" />
            </dependentAssembly>
            <dependentAssembly>
                <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
            </dependentAssembly>
        </assemblyBinding>
    </runtime>
</configuration>